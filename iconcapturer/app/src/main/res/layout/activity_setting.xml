<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/setting_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="表情包捕获设置"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_line"
            android:layout_gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="捕获模式："
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingEnd="5dp" />

            <Spinner
                android:id="@+id/capture_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sort_type_spinner" />

            <ImageButton
                android:id="@+id/capture_type_help_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/help"
                android:background="@null"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="最大高（X屏幕高）："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="25dp"
                    android:layout_height="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:text="0.5"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_max_height_text"/>
            </LinearLayout>
            <SeekBar
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/img_max_height_seekBar"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:textSize="15sp"
                    android:text="最大宽（X屏幕宽）："
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="25dp"
                    android:layout_height="15sp"/>

                <TextView
                    android:text="0.5"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_max_width_text"/>
            </LinearLayout>
            <SeekBar
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/img_max_width_seekBar"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="最小高（X屏幕高）："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="25dp"
                    android:layout_height="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:text="0.1"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_min_height_text"/>
            </LinearLayout>
            <SeekBar
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/img_min_height_seekBar"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="最小宽（X屏幕宽）："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <View
                    android:layout_width="25dp"
                    android:layout_height="15sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:text="0.5"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_min_width_text"/>
            </LinearLayout>
            <SeekBar
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/img_min_width_seekBar"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="最小比例（短边/长边）: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="4dp"
                    android:layout_height="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:text="0.5"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_scale_ratio_text"/>
            </LinearLayout>
            <SeekBar
                android:clickable="true"
                android:focusable="true"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/img_scale_ratio_seekBar"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="15sp"
                android:text="GIF帧率（8~30）: "
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"/>

            <EditText
                android:text="24"
                android:textSize="15sp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_square_border"
                android:id="@+id/gif_frame_rate_text"/>

            <View
                android:layout_width="15dp"
                android:layout_height="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="15sp"
                android:text="图像质量（%）: "
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="22dp"/>

            <EditText
                android:text="80"
                android:textSize="15sp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_square_border"
                android:id="@+id/image_quality_text"/>

            <View
                android:layout_width="15dp"
                android:layout_height="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="页面展示设置"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_line"
            android:layout_gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认排序方式："
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingEnd="5dp" />

            <Spinner
                android:id="@+id/sort_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sort_type_spinner" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:id="@+id/restore_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_border"
            android:gravity="center"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/reset_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:src="@drawable/restore_btn"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@drawable/bottom_text_selector"
                android:paddingBottom="5dp"
                android:text="恢复默认设置"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>